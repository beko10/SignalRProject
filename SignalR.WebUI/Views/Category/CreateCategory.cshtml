@model SignalR.WebUI.Dtos.CategoryDtos.CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori Ekleme</h4>
        <div class="row">
            <div class="col-md-12">
                <form  method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Giriş</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Kategori Adını Giriniz</label>
                                <input asp-for="CategoryName" type="text" class="form-control" id="categoryname"/>
                            </div>
                            
                            <div class="card-action">
                                <button class="btn btn-success">Kategori Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
