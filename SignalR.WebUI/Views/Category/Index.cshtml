@model List<SignalR.WebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori İşlemleri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">İd</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.CategoryID</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a  asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>

