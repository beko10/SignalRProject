@model List<ResultNotificationDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">İd</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Okundu</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationId</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a asp-controller="Notification" asp-action="DeleteNotification" asp-route-id="@item.NotificationId" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="Notification" asp-action="UpdateNotification" asp-route-id="@item.NotificationId" class="btn btn-outline-success">Güncelle</a></td>
										<td><a asp-controller="Notification" asp-action="NotificationStatusChangeToTrue" asp-route-id="@item.NotificationId" class="btn btn-outline-warning">Okundu</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Notification" asp-action="CreateNotification" class="btn btn-outline-primary">Yeni Bildirim Girişi</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>



