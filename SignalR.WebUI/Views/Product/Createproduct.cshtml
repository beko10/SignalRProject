@model CreateProductDto
@{
    ViewData["Title"] = "Createproduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün Ekleme Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Giriş</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Ürün Adını Giriniz</label>
                                <input asp-for="ProductName" type="text" class="form-control" id="categoryname" />
                            </div>
                            <div class="form-group">
                                <label for="descripion">Ürün Açıklaması Giriniz</label>
                                <input asp-for="Descripion" type="text" class="form-control" id="descripion" />
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı Giriniz</label>
                                <input asp-for="Price" type="text" class="form-control" id="price" />
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Ürün Resmi Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageUrl" />
                            </div>
                            <div class="form-group">
                                <select asp-for="CategoryId" asp-items="@ViewBag.categoriesSelect" class="form-select">
                                    <option value="value">Kategori Seçiniz</option>
                                    <span asp-validation-for="CategoryId"></span>
                                </select>
                            </div> 

                            <div class="card-action">
                                <button class="btn btn-success">Ürünü Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
