@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori Ekleme</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Giriş</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingname">Ad Soyad</label>
                                <input asp-for="Name" type="text" class="form-control" id="bookingname" />
                            </div>
                            <div class="form-group">
                                <label for="bookingdescription">Rezervasyon Açıklamsını  Giriniz</label>
                                <input asp-for="Description" type="text" class="form-control" id="bookingdescription" />
                            </div>
                            <div class="form-group">
                                <label for="bookingphone">Telefon Numaranızı  Giriniz</label>
                                <input asp-for="Phone" type="text" class="form-control" id="bookingphone" />
                            </div>
                            <div class="form-group">
                                <label for="bookingmail">Mail Adresinizi Giriniz</label>
                                <input asp-for="Mail" type="mail" class="form-control" id="bookingmail" />
                            </div>
                            <div class="form-group">
                                <label for="bookingpersoncount">Kişi Sayısını Giriniz</label>
                                <input asp-for="PersonCount" type="number" class="form-control" id="bookingpersoncount" />
                            </div>
                            <div class="form-group">
                                <label for="bookingdate">Rezervasyon Tarihini Giriniz</label>
                                <input asp-for="Date" type="date" class="form-control" id="bookingdate" />
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">Rezervasyon Oluştur</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



