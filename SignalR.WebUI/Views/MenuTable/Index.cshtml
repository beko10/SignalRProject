@model List<ResultMenuTableDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Masa Listesi </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Masalar ile ilgili aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">İd</th>
									<th scope="col">Masa Adı</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count += 1;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>

										<td><a asp-controller="MenuTable" asp-action="DeleteMenuTable" asp-route-id="@item.MenuTableId" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="MenuTable" asp-action="UpdateMenuTable" asp-route-id="@item.MenuTableId" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="MenuTable" asp-action="CreateMenuTable" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


