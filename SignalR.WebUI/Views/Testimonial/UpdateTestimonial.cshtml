@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim Bilgisi Ekleme</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input asp-for="TestimonialID" type="hidden"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Bilgisi Giriş</div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="TestimonialName">Müşteri Adını Giriniz</label>
                                <input asp-for="Name" type="text" class="form-control" id="TestimonialName" />
                            </div>

                            <div class="form-group">
                                <label for="TestimonialTitle">Müşteri Ünvanı Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="TestimonialTitle" />
                            </div>

                            <div class="form-group">
                                <label for="TestimonialComment">Müşteri Yorumu </label>
                                <input asp-for="Comment" type="text" class="form-control" id="TestimonialComment" />
                            </div>

                            <div class="form-group">
                                <label for="TestimonialImageUrl">Müşteri Resim Dosya Yolunu Girin</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="TestimonialImageUrl" />
                            </div>


                            <div class="card-action">
                                <button class="btn btn-success">Yorumu Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
