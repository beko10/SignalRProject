@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana sayfa hakkımızda  işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input asp-for="AboutID" type="hidden"/>
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Yazısı Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Hakkımızda Başlık Giriniz</label>
                                <input asp-for="Title" type="text" class="form-control" id="title" />
                            </div>
                            <div class="form-group">
                                <label for="description">Hakkımızda Açıklama  Giriniz</label>
                                <textarea asp-for="Description" rows="5" class="form-control" id="description"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görsel Url'ini Giriniz</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageurl" />
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">Hakkımızda Yazısını Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

