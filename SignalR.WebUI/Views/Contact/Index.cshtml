@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> İletişim Bilgi İşlemleri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim alanı ile ilgili aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>

								<tr>
									<th scope="col">İd</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon Numarası</th>
									<th scope="col">Alt Bilgi Başlığı</th>
									<th scope="col">Alt Bilgi Açıklaması</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID"</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
										<td>@item.FooterTitle</td>
										<td>@item.FooterDescription</td>
										<td><a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-primary">Yeni İletişim Yazısı Girişi</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>


