@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Bilgisi Giriş</div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label for="FooterTitle">İletişim Bilgisi Başlık Giriniz</label>
                                <input asp-for="FooterTitle" type="text" class="form-control" id="FooterTitle" />
                            </div>

                            <div class="form-group">
                                <label for="FooterDescription">İletişim Bilgisi Açıklama Giriniz</label>
                                <input asp-for="FooterDescription" type="text" class="form-control" id="FooterDescription" />
                            </div>

                            <div class="form-group">
                                <label for="location">Adres Giriniz</label>
                                <input asp-for="Location" type="text" class="form-control" id="location" />
                            </div>

                            <div class="form-group">
                                <label for="phone">Telefon Numarası Giriniz</label>
                                <input asp-for="Phone" type="text" class="form-control" id="phone" />
                            </div>

                            <div class="form-group">
                                <label for="mail">Telefon Numarası Giriniz</label>
                                <input asp-for="Mail" type="text" class="form-control" id="mail" />
                            </div>

                            <div class="card-action">
                                <button class="btn btn-success">İletişim Bilgi Yazısı Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

