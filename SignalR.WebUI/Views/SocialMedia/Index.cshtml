@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya  İşlemleri</h4>
		<div class="row">
			<div class="col-md-">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili aşağıdan gerçekleştirebilirsiniz
						</div>
						<table class="table mt-3">
							<thead>

								<tr>
									<th scope="col">İd</th>
									<th scope="col">Başlık</th>
									<th scope="col">Url</th>
									<th scope="col">İkon</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SocialMediaID"</td>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td>@item.Icon</td>
										<td><a asp-controller="SocialMedia" asp-action="DeleteSocialMedia" asp-route-id="@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
										<td><a asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="SocialMedia" asp-action="CreateContact" class="btn btn-outline-primary">Yeni İletişim Girişi</a>
					</div>
				</div>

			</div>


		</div>
	</div>
</div>



